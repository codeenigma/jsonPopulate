{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "pretty": true,
    "module": "amd",
    "target": "es6",
    "outDir": "www/assets/js",
    "alwaysStrict": true,
    "watch": true
  },
  "files": [
    "src/ts/init.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
}
